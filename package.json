{
	"name": "javascript-development-environment",
	"version": "1.0.0",
	"description": "Javascript development environment",
	"main": "index.js",
	"scripts": {
		"prestart": "babel-node scripts/start.message.js",
		"start": "npm-run-all --parallel open:src lint:watch test:watch",
		"open:src": "babel-node scripts/server.js",
		"lint": "esw webpack.config.* src scripts --color",
		"lint:watch": "npm run lint -- --watch",
		"test": "mocha --reporter progress scripts/test.config.js \"src/**/*.test.js\"",
		"test:watch": "npm run test -- --watch"
	},
	"author": "Rodrigo Pecci Acorse",
	"license": "MIT",
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.6",
		"@babel/node": "^7.8.7",
		"@babel/preset-env": "^7.9.6",
		"@babel/register": "^7.9.0",
		"babel-loader": "^8.1.0",
		"chai": "^4.2.0",
		"chalk": "^4.0.0",
		"css-loader": "^3.5.3",
		"eslint": "^6.8.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-watch": "^6.0.1",
		"express": "^4.17.1",
		"jsdom": "^16.2.2",
		"mocha": "^7.1.2",
		"npm-run-all": "^4.1.5",
		"numeral": "^2.0.6",
		"open": "^7.0.3",
		"style-loader": "^1.2.1",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-middleware": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0"
	}
}
